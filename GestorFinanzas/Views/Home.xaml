-->
            <!-- Cuadros de Ingresos y Egresos -->
            <Grid ColumnDefinitions="*,*" Margin="10">
                <!-- Cuadro de Ingresos -->
                <Frame Padding="10"   Grid.Column="0" Margin="5" BorderColor="White">
                    <StackLayout>
                        <Button FontAutoScalingEnabled="True" TextColor="Gray" Text="Registrar Gasto" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" BackgroundColor="#dff0d8"  Clicked="OnIngresosClicked"/>
                    </StackLayout>
                </Frame>
                <!-- Cuadro de Egresos -->
                <Frame Padding="10"   Grid.Column="1" Margin="1" BorderColor="White">
                    <StackLayout>
                        <Button  FontAutoScalingEnabled="True" TextColor="Grey" Text="Registrar Gasto" Clicked="OnGastosClicked" FontSize="18" FontAttributes="Bold" BackgroundColor="#f2dede" HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>