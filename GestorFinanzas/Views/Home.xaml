                                <Label Text="{Binding Fecha}" Grid.Column="0" HorizontalOptions="Start" FontSize="14"/>
                                <Label Text="{Binding Concepto}" Grid.Column="1" HorizontalOptions="Center" FontSize="14"/>
                                <Label Text="{Binding Monto}" Grid.Column="2" HorizontalOptions="End" FontSize="14" TextColor="{Binding ColorMonto}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
